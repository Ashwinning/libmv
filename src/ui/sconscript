Import('options')
options['tools'] = ['default','qt4']
options['toolpath'] += ['.']
options['LIBS']=['lapack','atlas', 'flens', 'image']
options['LIBPATH']=['#bin-dbg/third_party/flens',
                    '#bin-dbg/libmv/image']

env = Environment(**options)
env.EnableQt4Modules(["QtGui","QtCore","QtSvg"])
env.Program(
    target = 'imageviewer',
    source = ['main.cc',
              'imageviewer.cc',
              'scrubber.cc',
              '#bin-dbg/third_party/flens/libflens.a',
              '#bin-dbg/libmv/image/libimage.a'],
)
